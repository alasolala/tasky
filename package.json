{
  "name": "tasky",
  "version": "1.0.0",
  "description": "This is a task management app",
  "main": "index.js",
  "scripts": {
    "dev": "electron .",
    "start": "nodemon --watch index.js --exec electron .",
    "build-icon": "electron-icon-builder --input=./public/icon.png --output=build --flatten",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "release": "cross-env GH_TOKEN=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 electron-builder"
  },
  "build": {
    "appId": "this.is.tasky",
    "productName": "Tasky",
    "copyright": "Copyright Â© 2021 Alaso",
    "publish": [
      {
        "provider": "generic",
        "url": "http://127.0.0.1:9005/" 
      }
    ],
    "directories": {
      "buildResources": "build"
    },
    "mac": {
      "category": "public.app-category.utilities"
    },
    "dmg": {
      "background": "build/background.jfif",
      "icon": "build/icons/icon.icns",
      "iconSize": 100,
      "contents": [
        {
          "x": 380,
          "y": 180,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 180,
          "type": "file"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "win": {
      "target": [
        "msi",
        "nsis"
      ],
      "icon": "build/icons/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "language": "2052",
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alasolala/tasky.git"
  },
  "keywords": [],
  "author": "Alaso",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/alasolala/tasky/issues"
  },
  "homepage": "https://github.com/alasolala/tasky#readme",
  "dependencies": {
    "react": "^17.0.2",
    "vue": "^2.6.14",
    "electron-updater": "^4.3.9"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^13.1.4",
    "electron-builder": "^22.11.7",
    "electron-icon-builder": "^2.0.1",
    "nodemon": "^2.0.7"
  }
}
